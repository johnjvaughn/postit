<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: :post do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br>
    <% end %>
    <%= post.net_votes %> votes
    <% if logged_in? %>
      <br>
      <%= link_to vote_post_path(post, vote: false), method: :post do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>

  <div class="span8 well">
    <%= render post.categories %>

    <h4><%= link_to post.title, fix_url(post.url), target: "_blank" %></h4>
    <p><%= post.description %></p>
    <p>
      <span class="quiet">posted by</span> <%= link_to post.creator.username, user_path(post.creator) %>
      <small>at <%= format_datetime(post.created_at) %></small>
    </p>
    <p>
      <%= link_to "#{post.comments.length} comments", post_url(post.id) %>
    </p>
  </div>
</div>
