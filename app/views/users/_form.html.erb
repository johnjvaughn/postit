<%= render "shared/errors", obj: @user %>

<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.label :time_zone %>
    </div>
    
    <%= submit_tag "#{@user.new_record? ? 'Register' : 'Update Profile'}", class: "btn btn-primary" %>
  <% end %>
</div>